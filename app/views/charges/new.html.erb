<%= render "nav" %>
<div class='booked-appointment-index_page'>
  <%= form_tag payment_confirmation_path do %>
  <article>
    <% if flash[:error].present? %>
    <div id="error_explanation">
      <p><%= flash[:error] %></p>
    </div>
    <% end %>
    <label class="amount">
      <span>Booking id: <%= @appointment.token %></span><br /><br />
    </label>
    <label class="amount">
      <span>Amount: <%= @charges.total %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="A month's subscription"
    data-amount="" data-locale="auto"></script>
  <% end %>
</div>